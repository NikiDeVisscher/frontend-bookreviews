{{page-title "Edit Review"}}

<h2>Edit your review for {{@model.book.title}}</h2>

<form class="form" {{on "submit" this.saveReview}}>
  <label for="rating">Rating (1-5):</label>
  <input
    id="rating"
    type="number"
    value={{@model.reviewrating}}
    min="1"
    max="5"
    {{on "input" this.updateRating}}
  />
  {{#if this.errors.reviewrating}}
    <span class="error-message">{{this.errors.reviewrating}}</span>
  {{/if}}

  <label for="content">Review:</label>
  <textarea
    id="content"
    value={{@model.reviewcontent}}
    {{on "input" (fn this.updateField "reviewcontent")}}
  />
  {{#if this.errors.reviewcontent}}
    <span class="error-message">{{this.errors.reviewcontent}}</span>
  {{/if}}

  <button type="submit">Save review</button>
  <button type="button" {{on "click" this.cancel}}>Cancel</button>
</form>