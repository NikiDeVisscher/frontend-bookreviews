{{page-title "FrontendBookreviews"}}

<LinkTo @route="index">Home</LinkTo>
<LinkTo @route="books">Show all books</LinkTo>

{{#if this.currentUser.isAdmin}}
  <LinkTo @route="new-book">Create a new book</LinkTo>
  <LinkTo @route="accounts">Accounts</LinkTo>
{{/if}}

{{#if this.session.isAuthenticated}}
  <LinkTo @route="account">My account</LinkTo>

  {{#if this.currentUser.isAdmin}}
    <LinkTo @route="register">Register</LinkTo>
  {{/if}}
{{else}}
  <LinkTo @route="login">Login</LinkTo>
  <LinkTo @route="register">Register</LinkTo>
{{/if}}

{{outlet}}
