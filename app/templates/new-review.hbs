{{page-title "New Review"}}

<h2>Add a review for {{this.newReview.book.title}}</h2>

<form class="form" {{on "submit" this.submitReview}}>
  <label for="rating">Rating (1-5):</label>
  <input id="rating" type="number" min="1" max="5" {{on "input" this.updateRating}} />
  {{#if this.errors.reviewrating}}
    <span class="error-message">{{this.errors.reviewrating}}</span>
  {{/if}}

  <label for="content">Review:</label>
  <textarea id="content" {{on "input" (fn this.updateField "reviewcontent")}} />
  {{#if this.errors.reviewcontent}}
    <span class="error-message">{{this.errors.reviewcontent}}</span>
  {{/if}}

  <button type="submit">Submit review</button>
</form>