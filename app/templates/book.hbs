{{page-title "Book"}}

<BookDetails @book={{this.model}} />

{{#if this.currentUser.isAdmin}}
  <LinkTo @route="edit-book" @model={{@model}}>Edit</LinkTo>
  <a href="" {{on "click" this.deleteBook}}>Delete</a>
{{/if}}
<a href="" {{on "click" this.navigateAddReview}}>Add a review</a>

<h2>Reviews</h2>

<p>Average rating: {{@model.averagerating}}</p>

<Reviews @book={{this.model}} />