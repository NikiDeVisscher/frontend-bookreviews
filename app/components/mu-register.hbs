<div class="feedback-message">
  {{#if this.loading}}
    <span class="loading">Registering...</span>
  {{/if}}
  {{#if this.errorMessage}}
    <span class="error-message">{{this.errorMessage}}</span>
  {{/if}}
  {{#if this.successMessage}}
    <span class="success-message">{{this.successMessage}}</span>
  {{/if}}
</div>

<form class="form" {{on "submit" this.registerAccount}}>
  <label for="name">Name</label>
  <input
    id="name"
    value={{this.name}}
    placeholder="John Doe"
    {{on "input" this.updateName}} />

  <label for="nickname">Username</label>
  <input
    id="nickname"
    value={{this.nickname}}
    placeholder="john.doe"
    {{on "input" this.updateNickname}} />

  <label for="password">Password</label>
  <input
    id="password"
    value={{this.password}}
    type="password"
    {{on "input" this.updatePassword}} />

  <label for="password-confirmation">Confirm password</label>
  <input
    id="password-confirmation"
    value={{this.passwordConfirmation}}
    type="password"
    {{on "input" this.updatePasswordConfirmation}} />

  {{#if this.allowRoleSelection}}
    <label for="role">Role</label>
    <select id="role" {{on "change" this.updateRole}}>
      <option value="reader">Reader</option>
      <option value="admin">Admin</option>
    </select>
  {{/if}}

  <button type="submit">Register</button>
</form>