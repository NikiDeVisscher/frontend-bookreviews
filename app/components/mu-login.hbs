<form class="form" {{on "submit" this.login}}>
  <label for="mu-login-username">Username</label>
  <input
    id="mu-login-username"
    value={{this.nickname}}
    placeholder={{@placeholder}}
    {{on "input" this.updateNickname}} />

  <label for="mu-login-password">Password</label>
  <input
    id="mu-login-password"
    value={{this.password}}
    type="password"
    {{on "input" this.updatePassword}} />

  <span class="error-message">
    {{#if this.isAuthenticating}}
      <div class="mu-login-authenticating">
        Verifying credentials
      </div>
    {{/if}}
    {{#if this.errorMessage}}
      <div class="mu-login-error-message">
        {{this.errorMessage}}
      </div>
    {{/if}}
  </span>
  {{#if this.isAuthenticating}}
    <button type="submit"
      disabled={{true}}
      class="mu-login-button">
      {{this.label}}
    </button>
  {{else}}
    <button type="submit"
      class="mu-login-button">
      {{this.label}}
    </button>
  {{/if}}
</form>